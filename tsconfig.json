{
  "compilerOptions": {
    "target":                   "ES2021",
    "module":                   "nodenext",           // or "CommonJS" if you prefer
    "moduleResolution":         "nodenext",
    "esModuleInterop":          true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict":                   true,
    "skipLibCheck":             true,
    "rootDir":                  ".",
    "outDir":                   "dist"
  },
  "include": ["*.ts"],    // compile all .ts at the project root
  "exclude": ["node_modules"]
}